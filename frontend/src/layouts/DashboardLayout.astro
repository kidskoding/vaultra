---
import BaseLayout from './BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import DashboardGuard from '../components/DashboardGuard';
import LogoutButton from '../components/LogoutButton';

interface Props {
  title?: string;
}
const { title = 'Dashboard' } = Astro.props;
---
<BaseLayout title={title}>
  <DashboardGuard client:load>
    <div class="flex min-h-screen bg-claude-bg">
      <aside class="w-64 bg-claude-bg-secondary border-r border-claude-border flex flex-col">
        <div class="p-6 border-b border-claude-border">
          <a href="/" class="text-xl font-bold text-claude-text tracking-tight">Vaultra</a>
        </div>
        <Navigation />
        <div class="mt-auto p-4 border-t border-claude-border">
          <LogoutButton client:load />
        </div>
      </aside>
      <main class="flex-1 p-8">
        <slot />
      </main>
    </div>
  </DashboardGuard>
</BaseLayout>
