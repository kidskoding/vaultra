---
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import MetricsChart from '../../components/MetricsChart';
---
<DashboardLayout title="Metrics">
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-semibold text-claude-text tracking-tight">Metrics</h1>
      <p class="text-sm text-claude-text-secondary mt-1">Your financial metrics over time.</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <MetricsChart client:load type="revenue" />
      <MetricsChart client:load type="volatility" />
      <MetricsChart client:load type="chargebacks" />
      <MetricsChart client:load type="readiness" />
    </div>
  </div>
</DashboardLayout>
